<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="duarte.j.addressbook.Bill">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:id="@+id/imgBill2"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/bill_gates"
        android:layout_rowSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_Bill"
        android:id="@+id/txtNameBill2"
        android:textSize="20sp"
        android:layout_marginTop="60sp"
        android:layout_marginLeft="10sp"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(203)567-4009"
        android:id="@+id/txtPhoneBill2"
        android:textSize="17sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="30sp"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="465 Barks Ave, Connecticut"
        android:id="@+id/txtAddressBill2"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp" />
</GridLayout>
